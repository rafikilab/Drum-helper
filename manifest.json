{
  "name": "DrumHelper - Professional Drummer Assistant",
  "short_name": "DrumHelper",
  "description": "Professional metronome PWA with intelligent voice announcements, song section management, and offline functionality for drummers",
  "version": "2.0.0",
  "start_url": "./",
  "display": "standalone",
  "orientation": "any",
  "background_color": "#1f2937",
  "theme_color": "#10b981",
  "lang": "en",
  "scope": "./",
  "id": "drumhelper-pwa",
  
  "categories": [
    "music",
    "utilities",
    "productivity",
    "education",
    "entertainment"
  ],
  
