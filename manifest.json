          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Quick Setup",
      "short_name": "Setup",
      "description": "Quick song configuration",
      "url": "./?action=setup",
      "icons": [
        {
          "src": "data:image/svg+xml;base64,",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    },
    {
      "name": "Song Library",
      "short_name": "Library",
      "description": "Access saved songs",
      "url": "./?action=library",
      "icons": [
        {
          "src": "data:image/svg+xml;base64,",
          "sizes": "96x96",
          "type": "image/svg+xml"
        }
      ]
    }
  ],

  "related_applications": [],

  "prefer_related_applications": false,

  "share_target": {
    "action": "./",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "song-title",
      "text": "song-data",
      "url": "song-url"
    }
  },

  "file_handlers": [
    {
      "action": "./",
      "accept": {
        "application/json": [".json"],
        "application/drumhelper": [".drumhelper"]
      }
    }
  ],

  "protocol_handlers": [
    {
      "protocol": "drumhelper",
      "url": "./?song=%s"
    }
  ],

  "edge_side_panel": {
    "preferred_width": 400
  },

  "launch_handler": {
    "client_mode": "focus-existing"
  },

  "handle_links": "preferred",

  "scope_extensions": [
    {"origin": "https://*.drumhelper.app"}
  ],

  "permissions_policy": {
    "microphone": ["self"],
    "speaker-selection": ["self"],
    "web-share": ["self"]
  }
}